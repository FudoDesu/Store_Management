@page
@using BusinessObject.Enum;
@model StoreManagementWebApp.Pages.AdminPages.UserDetailsModel

@{
    ViewData["Title"] = "UserDetails";
}

<h1>UserDetails</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Role.RoleName)
        </dd>
        @if (Model.User.RoleId == (int)RoleEnum.Customer)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.Membership)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.Membership.MembershipName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.MembershipPoint)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.MembershipPoint)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./UserEdit" asp-route-id="@Model.User?.UserId">Edit</a> |
    <a asp-page="./Index">Back to List</a> |
    <a asp-page="./UserUpdateStatus" asp-route-id="@Model.User.UserId">Change Status</a> |
    <a asp-page="./UserBan" style="color:red" asp-route-id="@Model.User.UserId">Ban User</a>
</div>
